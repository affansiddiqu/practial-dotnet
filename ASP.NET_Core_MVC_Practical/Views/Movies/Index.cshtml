@model IEnumerable<ASP.NET_Core_MVC_Practical.Models.Movie>

@{
    ViewData["Title"] = "Movies List";
}

<h1>Movies List</h1>

<form asp-controller="Movies" asp-action="Index" method="post" class="form-inline my-2 my-lg-0">
    <div class="row">
        <div class="col-6 d-flex">
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 m-2" type="submit">Search</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped mt-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
        </tr>
}

    </tbody>
</table>

<partial name="_Pagination"/>
